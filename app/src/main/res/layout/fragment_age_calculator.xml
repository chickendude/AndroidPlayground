<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  xmlns:tools="http://schemas.android.com/tools"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@color/colorPrimaryLight"
			  android:gravity="center"
			  android:orientation="vertical"
			  android:padding="8dp">

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="4dp"
		app:cardBackgroundColor="@color/colorPrimary"
		app:cardCornerRadius="5dp"
		app:cardElevation="5dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:padding="8dp">

			<ch.ralena.activitypractice.views.AgeEditText
				android:id="@+id/ageEdit"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="YYY years MM months DD days"
				android:textAlignment="center"
				android:textColor="@color/colorPrimaryText"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="or"
				android:textAlignment="center"
				android:textColor="@color/colorPrimaryText"/>

			<TextView
				android:id="@+id/birthDateText"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Select your birth date"
				android:textAlignment="center"
				android:textColor="@color/colorPrimaryDark"
				android:textSize="24sp"/>

		</LinearLayout>
	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="4dp"
		app:cardBackgroundColor="@color/colorSecondary"
		app:cardCornerRadius="5dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:padding="8dp">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="You've lived:"
				android:textColor="@color/colorSecondaryText"
				android:textSize="20sp"/>

			<TextView
				android:id="@+id/monthsValue"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:textColor="@color/colorSecondaryText"
				android:textSize="20sp"
				tools:text="100 months"/>

			<TextView
				android:id="@+id/weeksValue"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:textColor="@color/colorSecondaryText"
				android:textSize="20sp"
				tools:text="100 weeks"/>

			<TextView
				android:id="@+id/daysValue"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:textColor="@color/colorSecondaryText"
				android:textSize="20sp"
				tools:text="100 days"/>

			<TextView
				android:id="@+id/hoursValue"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:textColor="@color/colorSecondaryText"
				android:textSize="20sp"
				tools:text="100 hours"/>

		</LinearLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>